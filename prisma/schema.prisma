// prisma/schema.prisma

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


// schema.prisma

model products {
  product_id                 String      @id
  availability               String?
  name                       String?
  price                      String?
  oldPrice                   String?     
  displayDiscountPercentage  String?
  familyName                 String?
  subfamilyName              String?
  sectionName                String?
  img                        String?
  link                       String?
  websiteName                String? 
  favorites  Favorite[]     
}

model User {
  id         Int       @id @default(autoincrement())
  firstName  String
  lastName   String
  username   String    @unique
  email      String    @unique
  password   String  
  isAdmin    Boolean   @default(false)
  favorites  Favorite[] // Define a one-to-many relationship with the Favorite model
}


// Define the Favorite model
model Favorite {
  id            Int       @id @default(autoincrement())
  user          User      @relation(fields: [userId], references: [id])
  userId        Int
  product       products   @relation(fields: [productId], references: [product_id])
  productId     String
  
}



